---
global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - localhost:9093

rule_files:
- /etc/one/prometheus/rules/*.yml

scrape_configs:
- job_name: prometheus
  static_configs:
  - targets:
    - localhost:9090

- job_name: opennebula_exporter
  static_configs:
  - targets:
    - localhost:9925

- job_name: node_exporter
  static_configs:
{% for host in groups['all'] %}
  - targets:
    - {{ host }}:9100
{% if host in groups['hipervisores'] and host in monitoring_host_ids %}
    labels:
      one_host_id: {{ monitoring_host_ids[host] }}
{% endif %}
{% endfor %}

- job_name: libvirt_exporter
  static_configs:
{% for host in groups['hipervisores'] %}
  - targets:
    - {{ host }}:9926
{% if host in monitoring_host_ids %}
    labels:
      one_host_id: {{ monitoring_host_ids[host] }}
{% endif %}
{% endfor %}

- job_name: ceph
  honor_labels: true
  static_configs:
  - targets:
{% for host in groups['ceph_admins'] %}
    - {{ host }}:9283
{% endfor %}
